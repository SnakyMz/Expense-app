<section class='categories'>
  <nav>
    <%= link_to '#', groups_path, :class=>'nav-btn' %>
    <h1>Categories</h1>
    <%= button_to '[>]', destroy_user_session_path, :class=>'logout', method: :delete %>
  </nav> 
  <% @groups.each do |group| %>
    <div class='category'>
      <div>
        <img src=<%= group.icon %> alt=<%= group.name %> class='icons'>
      </div>
      <div class='categoryInfo'>
        <h2><%= link_to group.name, group_path(group) %></h2>
        <p><%= group.entities.count %></p>
      </div>  
    </div>
  <% end %>
  <div class='bottom'>
    <%= link_to 'Add Category', new_group_path, :class=>'links' %>
  </div>
</section>

<nav>
  <ul>
    <li><%= link_to '<', group_path(@group), :class=>'nav-btn' %></li>
    <li><h1>Add a new Transaction</h1></li>
    <li><%= button_to '[>]', destroy_user_session_path, :class=>'logout', method: :delete %></li>
  </ul>
</nav>
<section class='addTransaction'> 
  <%= form_with model: @entity, url: group_entities_path, :class=>'forms', method: :post do |form| %>
    <%= form.label :name, 'Name:' %>
    <%= form.text_field :name, :class => 'texts' %>
    <%= form.label :amount, 'Amount:' %>
    <%= form.text_field :amount, :class => 'texts' %>
    <%= form.label :group_id, 'Category:' %>
    <%= form.collection_select :group_id, Group.all, :id, :name %>
    <%= form.submit 'Create Transaction', :class => 'btn' %>
  <% end %>
</section>
